<Page x:Class="qual.qualHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:qual"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Qual Report">

    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Width="125" Height="50" HorizontalAlignment="Right" Click="btnOpen_Click">Open...</Button>

        <Button Grid.Column="0" Grid.Row="1" Width="125" Height="50" HorizontalAlignment="Right" Click="Button_Click">View</Button>
        <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap"   
                 Text="Choose a file" Width="472" Name="FileNameTextBox" TextChanged="FileNameTextBox_TextChanged" Grid.ColumnSpan="4" Margin="10"/>


    </Grid>
</Page>
